---
import SectionContainer from "@/components/ui/SectionContainer.astro";
import Skills from "./components/Skills.astro";
import ExperienceTabs from "./components/react/ExperienceTabs";
const currentLocale = Astro.currentLocale || "es";

const texts = {
  en: {
    title: "Experience"
  },
  es: {
    title: "Experiencia"
  }
}[currentLocale]!;
---

<SectionContainer id="experience">
  <div class="flex w-full flex-col gap-8">
    <h2 class="text-center text-2xl font-semibold sm:ml-40 sm:text-left">{texts.title}</h2>
    <div class="flex w-full flex-col items-center gap-16">
      <Skills />
      <ExperienceTabs client:idle locale={currentLocale} />
    </div>
  </div>
</SectionContainer>
