---
import CV from "@/icons/react/CV";
import GitHub from "@/icons/react/GitHub.tsx";
import Linkedin from "@/icons/react/Linkedin.tsx";
import Mail from "@/icons/react/Mail.tsx";
import SectionContainer from "./SectionContainer.astro";
import Badge from "./react/Badge";
import BadgeLink from "./react/BadgeLink";
---

<SectionContainer class="py-44" id="home">
  <div class="flex flex-col items-center gap-4 sm:max-w-3xl sm:items-baseline">
    <section class="m-auto flex flex-col items-center gap-8 sm:flex-row">
      <div class="relative m-auto h-32 w-32 overflow-hidden rounded-full">
        <img
          class="absolute -top-5"
          src="/images/avatar.webp"
          width="100%"
          height="100%"
          alt="Avatar iamge"
        />
      </div>
      <div class="flex flex-col gap-2 sm:gap-0">
        <h1 class="text-center text-4xl font-black sm:text-6xl">José Pazmiño</h1>
        <Badge className="self-center sm:self-start">FullStack Developer</Badge>
      </div>
    </section>
    <p class="text-pretty px-8 text-center sm:max-w-full sm:p-0 sm:text-left sm:text-inherit">
      Passionate about programming and self-learning. I specialize in designing robust, interactive, scalable,
      and unique applications using modern technologies such as React, Next.js, Astro, Tailwind, and NestJS
    </p>
    <div class="flex max-w-fit flex-col gap-4 sm:flex-row">
      <BadgeLink
        className="bg-black/50 font-semibold hover:bg-gray-800 dark:bg-black/50"
        href="https://github.com/PazminoJose"
      >
        <GitHub />
         GitHub
      </BadgeLink>
      <BadgeLink
        className="bg-blue-600/50 font-semibold  hover:bg-blue-800 dark:bg-blue-600/50 "
        href="https://www.linkedin.com/in/josé-pazmiño-6021ba25a/"
      >
        <Linkedin />
         Linkedin
      </BadgeLink>
      <BadgeLink
        className="bg-cyan-800/50 font-semibold  hover:bg-cyan-900 dark:bg-cyan-800/50 "
        href="mailto:josepf.dev@gmail.com"
      >
        <Mail />
         josepf.dev@gmail.com
      </BadgeLink>
      <BadgeLink
        className="bg-cyan-800/50 font-semibold  hover:bg-cyan-900 dark:bg-cyan-800/50 "
        href="/docs/cv.pdf"
      >
        <CV />
         CV
      </BadgeLink>
    </div>
  </div>
</SectionContainer>
