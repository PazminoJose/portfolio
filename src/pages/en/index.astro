---
import About from "@/components/sections/About.astro";
import Contact from "@/components/sections/Contact/Contact.astro";
import Experience from "@/components/sections/Experience/Experience.astro";
import Home from "@/components/sections/Home.astro";
import Projects from "@/components/sections/Projects/Projects.astro";
import Layout from "@/layouts/Layout.astro";
import { Separator } from "@radix-ui/react-separator";

const title = "Portfolio José Pazmiño - Fullstack Developer and Programmer";
const description = `Welcome to José Pazmiño's portfolio—experience the fusion of creativity and technical 
mastery in Fullstack Development. Explore innovative projects showcasing expertise in front-end 
design and robust back-end systems, all crafted to deliver exceptional user-centric solutions.`;
---

<Layout title={title} description={description}>
  <main class="flex h-full flex-col overflow-x-hidden overflow-y-auto scroll-smooth">
    <Home />
    <Separator className="m-auto my-16 w-[90%]" />
    <Experience />
    <Separator className="m-auto my-16 w-[90%]" />
    <Projects />
    <Separator className="m-auto my-16 w-[90%]" />
    <About />
    <Separator className="m-auto my-16 w-[90%]" />
    <Contact />
  </main>
</Layout>
